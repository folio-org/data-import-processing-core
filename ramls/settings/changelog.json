{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "description": "A changelog record",
  "type": "object",
  "properties": {
    "description": {
      "description": "The description of the change",
      "type": "string"
    },
    "timestamp": {
      "description": "The timestamp for when the change occurred",
      "type": "string",
      "format": "date-time"
    }
  },
  "additionalProperties": false,
  "required": [
    "description",
    "timestamp"
  ]
}
