{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "description": "A subject type",
  "type": "object",
  "properties": {
    "id": {
      "type": "string"
    },
    "name": {
      "description": "label for the subject type",
      "type": "string"
    },
    "source": {
      "type": "string",
      "description": "label indicating where the subject type entry originates from, i.e. 'folio', 'local' or 'consortium'",
      "enum": [
        "folio",
        "local",
        "consortium"
      ]
    },
    "metadata": {
      "type": "object",
      "$ref": "../raml-storage/raml-util/schemas/metadata.schema",
      "readonly": true
    }
  },
  "additionalProperties": true,
  "required": [
    "name",
    "source"
  ]
}
